/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run assemblybacterias -profile test, singularity
 */

params {
  config_profile_name = 'assembly local testing'
  config_profile_description = 'Profile containing the paths used in the HPC in the ISCIII, intended for direct usage inside this institution'

  kmer_bacteria_db = '/media/lchapado/Reference_data/References/KmerFinderDatabase/20190101/bacteria'

  //skip_fastqc                = true
  skip_multiqc               = true
  // skip_trimming              = true
  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed


  // Limit resources so that this can run on GitHub Actions
  max_cpus = 8
  max_memory = 30.GB
  max_time = 48.h


  schema_ignore_params = 'genomes,input_paths,input'
  input = "samplesheet.csv"
  gram = "+"
}
process{
	 withLabel:process_medium {
	 	memory = '20G'
	 }
	 withLabel:process_high {
	 	memory = '30G'
	 }
}
