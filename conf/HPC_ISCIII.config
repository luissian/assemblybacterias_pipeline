/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/assemblybacterias -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Instituto de Salud Carlos III, High Performance Computer (HPC-ISCIII)'
  config_profile_description = 'Profile containing the paths used in the HPC in the ISCIII, intended for direct usage inside this institution'

  // Limit resources so that this can run on GitHub Actions
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  kmerfinder_bacteria_database = '/media/bioinfo/Massive_data/processing_Data/bioinformatics/references/kmerfinder/20210606/bacteria/'
  kmerfinder_bacteria_taxonomy = '/media/bioinfo/Massive_data/processing_Data/bioinformatics/references/kmerfinder/20210606/bacteria/bacteria.tax'

  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  schema_ignore_params = 'genomes,input_paths,input'
}

process {
  withName:KMERFINDER {
    singularity {
      enabled = true
      autoMounts = true
    }
    container = '/data/bi/pipelines/kmerfinder_v3.0.simg'
  }
}   
